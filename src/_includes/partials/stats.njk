{% set stats = [
  {
    name: talks,
    value: 85
  },
  {
    name: attendees,
    value: "+1,000" if locale == 'en' else "+1.000"
  },
  {
    name: communities,
    value: 24
  }
]%}
<div class="stats">
  {% for stat in stats %}
    <div class="stat">
      <div class="stat-value">{{ stat.value }}</div>
      <div class="stat-label light">{{ stat.name }}</div>
    </div>
  {% endfor %}
</div>